{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowJs": false,                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                     
    "skipLibCheck": true,
    "resolveJsonModule": true,                                
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

